"Syntax Highlighting On
syntax on

"colorscheme morning
"colorscheme shine

set number

"incremental searche
set incsearch
"highlight the target of a search
set hlsearch


"Turn on automatic indentation
set autoindent
"Turns on C style indentation
set cindent

"Set the width of text to 70 characters.
"set textwidth=70

"C Coding
"Set the size of an indentation.
"set sw=4
set shiftwidth=4

set expandtab

set laststatus=2

"Don't apply format when pasting info
set paste

"Ignore Case
set ignorecase

set tabstop=4
